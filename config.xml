<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.base.app"
        version     = "1.0.0" >
    <name>Tienda</name>
    <description>
        Tienda obligatorio Andr√©s Valle Lisboa
    </description>
    <author href="http://www.ort.edu.uy/" email="avallelisboa@gmail.com">
      Andruzz
    </author>
    <!-- https://build.phonegap.com/current-support -->
    <preference name="phonegap-version" value="cli-9.0.0" />
     <!-- plugins -->
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <!--informacion de dispositivo-->
    <plugin name="cordova-plugin-device" spec="~2.0.2" />
    <!--geolocalizacion-->
    <plugin name="cordova-plugin-geolocation" spec="2.4.3" />
    <!--network-information-->
    <plugin name="cordova-plugin-network-information" spec="~2.0.1" />
    <!-- QR -->
    <!-- https://www.npmjs.com/package/phonegap-plugin-barcodescanner -->
    <plugin name="phonegap-plugin-barcodescanner" spec= "8.1.0" />
        
    <!-- network access -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <!-- Generar solo para Android -->
    <platform name="android" />
</widget>
